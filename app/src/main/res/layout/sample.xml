<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#323579"
    android:id="@+id/main1"
    tools:context=".MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView1211"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:layout_marginTop="50dp"
                                    android:fontFamily="@font/afacad_medium"
                                    android:text="Respiratory Profile"
                                    android:textColor="@color/black"
                                    android:textSize="50sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/afacad_medium"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal"
                                    android:text="@string/landingIntro"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="normal" />

                                <pl.droidsonroids.gif.GifImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="225dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/heart_16862094_ezgif_com_gif_maker" />

                                <Button
                                    android:id="@+id/getStartedbtn"
                                    style="@android:style/Widget.Button"
                                    android:layout_width="193dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@drawable/btn_bg2"
                                    android:text="Get Started"
                                    android:textColor="@color/white" />


                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>