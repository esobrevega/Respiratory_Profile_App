<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#323579"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="0dp"
        app:cardBackgroundColor="#F0EFF4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacad_medium"
                    android:gravity="center_horizontal"
                    android:text="Respiratory Profile"
                    android:layout_marginTop="50dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/black"
                    android:textSize="50sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="343dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/afacad_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/landingIntro2"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:layout_gravity="center"
                    android:src="@drawable/respiratory_profile_logo" />

                <Button
                    android:id="@+id/getStartedbtn"
                    style="@android:style/Widget.Button"
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bg2"
                    android:text="Get Started"
                    android:textColor="@color/white" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="215dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/arc_1" />

    <!--    <a href="https://www.freepik.com/search">Icon by Elzicon</a>-->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="319dp"
        android:layout_height="263dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="45dp"
        app:srcCompat="@drawable/doctor_921059" />

</RelativeLayout>